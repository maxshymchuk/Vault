{
    "include": ["src/**/*", "typing"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        // "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowJs": false,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false,
        "types": ["./typing"]
    },
    "ts-node": {
        "experimentalSpecifierResolution": "node",
        "experimentalResolver": true,
        "transpileOnly": false,
        "esm": true,
        "logError": true
    }
}
