{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "preserve",
        "moduleResolution": "node",
        "baseUrl": "./",
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictFunctionTypes": false,
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}